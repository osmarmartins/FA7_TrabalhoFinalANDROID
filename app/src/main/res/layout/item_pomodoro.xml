<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/grey"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/tarefa_icon"
        android:layout_alignParentLeft="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/file_document_48_black"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tarefa_titulo"
        android:text="TITULO"
        android:textColor="@color/colorPrimarytext"
        android:layout_toRightOf="@+id/tarefa_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:maxWidth="1500sp"/>

    <TextView
        android:id="@+id/tarefa_descricao"
        android:text="Descrição da Tarefa"
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/tarefa_titulo"
        android:layout_alignLeft="@+id/tarefa_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="10sp"
        android:maxWidth="150sp"/>

    <TextView
        android:id="@+id/tarefa_qtd_pomodoro"
        android:layout_below="@id/tarefa_descricao"
        android:layout_alignLeft="@id/tarefa_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:maxWidth="150sp"/>

    <Button
        android:id="@+id/bt_iniciar"
        android:text="@string/bt_iniciar"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:padding="5dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/bt_concluir"
        android:text="@string/bt_concluir"
        android:enabled="false"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:textSize="8sp"
        android:padding="5dp"
        android:layout_alignTop="@+id/tarefa_qtd_pomodoro"
        android:layout_alignLeft="@+id/bt_iniciar"/>

    <ImageView
        android:id="@+id/img_context_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dots_vertical_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="17dp" />



</RelativeLayout>
